@model IEnumerable<Deneme_proje.Models.Entities.CariBakiyeYaslandirma>
@{
    ViewData["Title"] = "Rapor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid content-inner mt-n5 py-0">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title px-4">Rapor</h4>
                    </div>
                </div>

                <!-- Optional: Add a form for filtering if needed -->
                <form method="get" class="mb-4 px-5 pt-5">
                    <div class="row d-flex align-items-center" style="width:max-content;">
                        <!-- Example form fields -->
                        <!-- Add filter fields here if needed -->
                        <div class="form-group col-md-4">
                            <label for="filter">Filter:</label>
                            <input type="text" id="filter" name="filter" class="form-control" placeholder="Enter filter criteria" />
                        </div>
                        <div class="form-group col-md-3 m-0">
                            <button type="submit" class="btn btn-primary">Ara</button>
                        </div>
                    </div>
                </form>

                <div class="card-body px-5">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table id="datatable" class="table table-striped" data-toggle="data-table">
                                <thead>
                                    <tr>
                                        <th>Müşteri Kodu</th>
                                        <th>Unvan</th>
                                        <th>-30 Gün</th>
                                        <th>-60 Gün</th>
                                        <th>-90 Gün</th>
                                        <th>-120 Gün</th> 
                                        <th>-120 Gün+</th>
                                        <th>Vadesi Yaklaşan Bakiye</th>
                                        <th>Vadesi Geçmiş Bakiye</th>
                                        <th>Toplam Bakiye</th>
                                        <th>Bakiye Tipi</th>
                                        <th>30 Gün</th>
                                        <th>60 Gün</th>
                                        <th>90 Gün</th>
                                        <th>120 Gün</th>
                                        <th>+120 Gün Üstü</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.MusteriKodu</td>
                                            <td>@item.Unvan</td>
                                            <td>@item.Gun30.ToString("C")</td>
                                            <td>@item.Gun60.ToString("C")</td>
                                            <td>@item.Gun90.ToString("C")</td>
                                            <td>@item.Gun120.ToString("C")</td>
                                            <td>@item.GunUstu120.ToString("C")</td>
                                            <td>@item.VadesiGecenBakiye.ToString("C")</td>
                                            <td>@item.VadesiGecmisBakiye.ToString("C")</td>
                                            <td>@item.ToplamBakiye.ToString("C")</td>
                                            <td>@item.BakiyeTipi</td>
                                            <td>@item.gecmisGun30.ToString("C")</td>
                                            <td>@item.gecmisGun60.ToString("C")</td>
                                            <td>@item.gecmisGun90.ToString("C")</td>
                                            <td>@item.gecmisGun120.ToString("C")</td>
                                            <td>@item.eksi120GunUstu.ToString("C")</td>
                                           
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            Veri bulunamadı.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
