        }

    .todo-list {
        list-style: none;
        padding: 0;
        margin: 0;
        max-height: 350px;
        overflow-y: auto;
    }

    .todo-item {
        display: flex;
        align-items: center;
        padding: 10px;
        border-bottom: 1px solid #eee;
        transition: background-color 0.2s;
    }

        .todo-item:hover {
            background-color: #f9f9f9;
        }

    .todo-checkbox {
        margin-right: 10px;
        position: relative;
    }

        .todo-checkbox input {
            opacity: 0;
            position: absolute;
        }

    .checkmark {
        height: 20px;
        width: 20px;
        background-color: #eee;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
    }

    .todo-checkbox input:checked ~ .checkmark {
        background-color: #296299;
    }

    .checkmark:after {
        content: "";
        display: none;
        width: 5px;
        height: 10px;
        border: solid white;
        border-width: 0 2px 2px 0;
        transform: rotate(45deg);
    }

    .todo-checkbox input:checked ~ .checkmark:after {
        display: block;
    }

    .todo-text {
        flex: 1;
        font-size: 13px;
        color: #333;
        margin-right: 10px;
    }

    .todo-completed .todo-text {
        text-decoration: line-through;
        color: #999;
    }

    .todo-date {
        font-size: 11px;
        color: #999;
        min-width: 80px;
    }

    .todo-priority {
        width: 8px;
        height: 8px;
        border-radius: 50%;
        margin-right: 10px;
    }

    .priority-high {
        background-color: #E53935;
    }

    .priority-medium {
        background-color: #FB8C00;
    }

    .priority-low {
        background-color: #43A047;
    }

    .todo-delete {
