            const pieCtx = document.getElementById('pieChart').getContext('2d');
            new Chart(pieCtx, {
                type: 'pie',
                data: {
                    labels: ['Açık', 'Kazandık', 'Kaybettik', 'Ertelendi', 'İptal'],
