    <script src="~/Content/assets/pages/elements.js"></script>

    <script>
               document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            if (form) {
                form.addEventListener('submit', async function(e) {
                    e.preventDefault();
                    console.log('Form submit başladı');

                    const usernameInput = document.getElementById('KullaniciAd');
                    const passwordInput = document.getElementById('Sifre');

                    if (!usernameInput || !passwordInput) {
                        console.error('Form elemanları bulunamadı!');
                        return;
                    }

                    try {
                        const username = usernameInput.value;
                        const password = passwordInput.value;

                        // URL'yi Login controller'a göre güncelle
                        const response = await fetch('/Login/LoginKullanici', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            credentials: 'include', // Session bilgilerini gönder
                            body: `username=${encodeURIComponent(username)}&password=${encodeURIComponent(password)}`
                        });

                        console.log('Sunucu yanıtı status:', response.status);

                        const responseData = await response.text();
                        console.log('Sunucu yanıtı:', responseData);

                        if (response.redirected) {
                            console.log('Yönlendirme URL:', response.url);
                            window.location.href = response.url;
                            return;
                        }

                        if (!response.ok) {
                            throw new Error(`HTTP error! status: ${response.status}`);
                        }

                        if (responseData.includes('Geçersiz kullanıcı adı veya şifre') ||
                            responseData.includes('Sisteme giriş yetkiniz bulunmamaktadır.')) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Giriş Hatası',
                                text: 'Kullanıcı adı veya şifre hatalı!'
                            });
                            return;
                        }

                        // Başarılı giriş durumunda Home/Index'e yönlendir
                        window.location.href = '/Home/Index';

                    } catch (error) {
                        console.error('Giriş işlemi hatası:', error);
                        Swal.fire({
                            icon: 'error',
                            title: 'Hata!',
                            text: 'Giriş işlemi sırasında bir hata oluştu: ' + error.message
                        });
                    }
                });
            }
        });

        // Beni hatırla fonksiyonu
        function tik() {
            console.log('Beni hatırla tiklendi');

            const checkbox = document.querySelector('input[type=checkbox][id=checkbox]');
            if (!checkbox) {
                console.log('Checkbox elementi bulunamadı');
                return;
            }

            if (checkbox.checked) {
                const kullaniciAd = document.getElementById('KullaniciAd').value;
                const sifre = document.getElementById('Sifre').value;

                console.log('Beni hatırla aktif, değerler kontrol ediliyor');

                if (kullaniciAd && sifre) {
                    localStorage.setItem('KullaniciAd', kullaniciAd);
                    localStorage.setItem('Sifre', sifre);
                    console.log('Kullanıcı bilgileri localStorage\'a kaydedildi');
                } else {
                    console.log('Kullanıcı adı veya şifre boş');
                    Swal.fire({
                        icon: 'error',
                        title: 'Hata!',
                        text: 'Kullanıcı Adı ve Şifre Girmelisin!'
                    });
                    checkbox.checked = false;
                }
            } else {
                console.log('Beni hatırla deaktif, localStorage temizleniyor');
                localStorage.removeItem('KullaniciAd');
                localStorage.removeItem('Sifre');
            }
        }
    </script>

  
