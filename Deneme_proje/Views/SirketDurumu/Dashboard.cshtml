        font-size: 16px;
        font-weight: 600;
        color: var(--primary-color);
    }

    .stat-change {
        font-size: 11px;
        margin-top: 5px;
    }

    .positive {
        color: #2baa6d;
    }

    .negative {
        color: #d9304f;
    }

    /* Bütçe ve İlerleme Çubuğu Stilleri */
