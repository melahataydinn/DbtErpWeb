    <script>
                 // Tab işlevselliği için genişletilmiş JavaScript

        // Kart tabları arasında geçiş yapma
        function initCardTabs() {
            const cardTabs = document.querySelectorAll('.card-tab');
            cardTabs.forEach(tab => {
                tab.addEventListener('click', function() {
                    // Kardeş tabların active class'ını kaldır
                    const siblingTabs = this.parentElement.querySelectorAll('.card-tab');
                    siblingTabs.forEach(siblingTab => {
                        siblingTab.classList.remove('active');
                    });

                    // Tıklanan tab'ı aktifleştir
                    this.classList.add('active');

                    // Tab içeriğini değiştir
                    const tabId = this.getAttribute('data-tab');
                    const card = this.closest('.card');
                    switchCardContent(card, tabId);
                });
            });
        }

        // Kart içindeki içeriği tab'a göre değiştirme
        function switchCardContent(card, tabId) {
            // Nakit Akışı Kartı
            if (card.querySelector('.card-title').textContent === 'Nakit Akışı') {
                const contentMap = {
                    'weekly-flow': {
                        income: '35.250,00 TL',
                        expenses: '18.740,00 TL',
                        netCashFlow: '+16.510,00 TL',
                        incomeChange: '+12,5%',
                        expensesChange: '+8,2%'
