        display: flex;
        align-items: center;
        background-color: white;
        border: 1px solid var(--border-color);
        border-radius: 4px;
        padding: 8px 12px;
        box-shadow: var(--card-shadow);
        cursor: pointer;
    }

        .date-selector svg {
            margin-right: 8px;
        }

        .date-selector span {
            font-size: 12px;
            color: var(--text-light);
        }
</style>
<style>
    /* Stat Grid Stilleri */
    .stat-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 10px;
    }

    .stat-card {
        background-color: var(--secondary-color);
