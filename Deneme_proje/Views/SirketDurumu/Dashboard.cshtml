                    'monthly-flow': {
                        income: '142.500,00 TL',
                        expenses: '75.360,00 TL',
                        netCashFlow: '+67.140,00 TL',
                        incomeChange: '+18,7%',
                        expensesChange: '+11,3%'
                    }
                };

                const content = contentMap[tabId];
                const statGrid = card.querySelector('.stat-grid');
                const incomeCard = statGrid.children[0];
                const expensesCard = statGrid.children[1];
                const netCashFlow = card.querySelector('.summary-total .value');

                incomeCard.querySelector('.stat-value').textContent = content.income;
                incomeCard.querySelector('.stat-change').textContent = `${content.incomeChange} geçen ${tabId === 'weekly-flow' ? 'haftaya' : 'aya'} göre`;

                expensesCard.querySelector('.stat-value').textContent = content.expenses;
                expensesCard.querySelector('.stat-change').textContent = `${content.expensesChange} geçen ${tabId === 'weekly-flow' ? 'haftaya' : 'aya'} göre`;

                netCashFlow.textContent = content.netCashFlow;
            }

            // Toplam Bakiye Kartı
            if (card.querySelector('.card-title').textContent === 'Toplam Bakiye') {
