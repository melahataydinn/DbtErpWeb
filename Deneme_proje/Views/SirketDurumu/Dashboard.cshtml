                    currencyItems[index].querySelector('.currency-name').textContent = item.name;
                    currencyItems[index].querySelector('.currency-value').innerHTML = `${item.value}<span class="currency-unit">${item.unit}</span>`;
                });
            }

            // Satın Almalar Kartı
            if (card.querySelector('.card-title').textContent === 'Satın Almalar') {
                const contentMap = {
                    'stock': [
                        { name: 'Hammadde Alımı', category: 'Üretim Malzemeleri', amount: '12.500,00 TL' },
