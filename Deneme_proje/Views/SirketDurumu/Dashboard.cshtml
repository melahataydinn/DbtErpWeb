        }

        .main-tab.active {
            color: var(--primary-color);
            font-weight: bold;
        }

            .main-tab.active::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 3px;
                background-color: var(--primary-color);
            }

    .main-tab-content {
        display: none;
    }

        .main-tab-content.active {
            display: block;
        }

