@model Deneme_proje.Models.SirketDurumuEntites.CekAnaliziViewModel



<div class="container-fluid content-inner mt-n5 py-0">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title px-4">Çek Analizi</h4>
                    </div>
                </div>

                <form method="get" class="mb-4 px-5 pt-5">
                    <div class="row d-flex align-items-center" style="width:max-content;">
                        <div class="form-group col-md-4">
                            <label for="baslamaTarihi">Başlama Tarihi:</label>
                            <input type="date" id="baslamaTarihi" name="baslamaTarihi" class="form-control" required value="@ViewBag.BaslamaTarihi" />
                        </div>
                        <div class="form-group col-md-4">
                            <label for="bitisTarihi">Bitiş Tarihi:</label>
                            <input type="date" id="bitisTarihi" name="bitisTarihi" class="form-control" required value="@ViewBag.BitisTarihi" />
                        </div>
                        <div class="form-group col-md-3 m-0">
                            <button type="submit" class="btn btn-primary">Ara</button>
                        </div>
                    </div>
                </form>

                <div class="card-body px-5">
                    @if (Model.CekAnaliziList == null || !Model.CekAnaliziList.Any() && Model.MusteriCekleriList == null || !Model.MusteriCekleriList.Any())
                    {
                        <div class="no-data">Veri bulunamadı</div>
                    }
                    else
                    {
                        <div class="row">
                            <div class="col-md-6">
                                <h4>Aldığımız Müşteri Çekleri</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Son Pozisyon</th>
                                                <th>Çek No</th>
                                                <th>Vade Tarihi</th>
                                                <th>İlk Hareket Tarihi</th>
                                                <th>Son Hareket Tarihi</th>
                                                <th>Sahibi</th>
                                                <th>Borçlu</th>
                                                <th>Nerede</th>
                                                <th>Tutar</th>
                                                <th>Döviz Cinsi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.CekAnaliziList)
                                            {
                                                <tr>
                                                    <td>@item.SonPozisyon</td>
                                                    <td>@item.ÇekNo</td>
                                                    <td>@item.VadeTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.İlkHareketTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.SonHareketTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.Sahibi</td>
                                                    <td>@item.Borçlu</td>
                                                    <td>@item.Nerede</td>
                                                    <td>@item.Tutar.ToString("C")</td>
                                                    <td>@item.DövizCinsi</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <h4>Verdiğimiz Firma Çekleri</h4>
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Son Pozisyon</th>
                                                <th>Çek No</th>
                                                <th>Vade Tarihi</th>
                                                <th>İlk Hareket Tarihi</th>
                                                <th>Son Hareket Tarihi</th>
                                                <th>Sahibi</th>
                                                <th>Borçlu</th>
                                                <th>Nerede</th>
                                                <th>Tutar</th>
                                                <th>Döviz Cinsi</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model.MusteriCekleriList)
                                            {
                                                <tr>
                                                    <td>@item.SonPozisyon</td>
                                                    <td>@item.ÇekNo</td>
                                                    <td>@item.VadeTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.İlkHareketTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.SonHareketTarihi.ToString("dd.MM.yyyy")</td>
                                                    <td>@item.Sahibi</td>
                                                    <td>@item.Borçlu</td>
                                                    <td>@item.Nerede</td>
                                                    <td>@item.Tutar.ToString("C")</td>
                                                    <td>@item.DövizCinsi</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
